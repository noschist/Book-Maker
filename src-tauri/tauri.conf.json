{
    "$schema": "../node_modules/@tauri-apps/cli/schema.json",
    "build": {
        "beforeBuildCommand": "npm run build",
        "beforeDevCommand": "npm run dev",
        "devPath": "http://localhost:3000",
        "distDir": "../out"
    },
    "package": {
        "productName": "scriptly",
        "version": "0.1.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "path": {
                "all": true
            },
            "globalShortcut": {
                "all": true
            },
            "fs": {
                "all": false,
                "copyFile": false,
                "createDir": false,
                "exists": false,
                "readDir": false,
                "readFile": false,
                "removeDir": false,
                "removeFile": false,
                "renameFile": false,
                "scope": [],
                "writeFile": false
            },
            "window": {
                "create": true,
                "center": true,
                "setResizable": true,
                "setMaximizable": true,
                "setMinimizable": true,
                "setClosable": true,
                "setTitle": true,
                "maximize": true,
                "unmaximize": true,
                "minimize": true,
                "unminimize": true,
                "show": true,
                "hide": true,
                "close": true,
                "setDecorations": true,
                "setSize": true,
                "setMinSize": true,
                "setFullscreen": true,
                "setFocus": true,
                "setSkipTaskbar": true
            }
        },
        "bundle": {
            "active": true,
            "category": "DeveloperTool",
            "copyright": "",
            "deb": {
                "depends": []
            },
            "externalBin": [],
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "com.tauri.dev",
            "longDescription": "",
            "macOS": {
                "entitlements": null,
                "exceptionDomain": "",
                "frameworks": [],
                "providerShortName": null,
                "signingIdentity": null
            },
            "resources": [],
            "shortDescription": "",
            "targets": "all",
            "windows": {
                "certificateThumbprint": null,
                "digestAlgorithm": "sha256",
                "timestampUrl": ""
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "fullscreen": false,
                "height": 600,
                "resizable": true,
                "title": "Scriptly",
                "width": 800,
                "visible": false
            },
            {
                "fullscreen": false,
                "height": 512,
                "resizable": false,
                "minimizable": false,
                "title": "Scriptly | Login/Register",
                "width": 1024,
                "url": "/onboard",
                "label": "login",
                "center": true
            }
        ]
    }
}
